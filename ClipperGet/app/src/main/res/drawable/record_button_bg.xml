<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- 未录制状态：红色圆形 -->
    <solid android:color="#FF4444" />
    
    <!-- 边框 -->
    <stroke
        android:width="4dp"
        android:color="#FFFFFF" />
        
    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
        
</shape>