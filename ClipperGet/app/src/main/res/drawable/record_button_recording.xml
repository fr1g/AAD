<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 录制状态：红色方形 -->
    <solid android:color="#FF0000" />
    
    <!-- 边框 -->
    <stroke
        android:width="4dp"
        android:color="#FFFFFF" />
        
    <!-- 圆角 -->
    <corners android:radius="8dp" />
        
    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
        
</shape>